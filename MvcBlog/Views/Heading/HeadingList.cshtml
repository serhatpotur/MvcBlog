@using Entity.Concrate
@model List<Heading>
@{
    ViewBag.Title = "HeadingList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}
@{
    var isActiveValue = "";
    var isActiveText = "";
}



<!-- Main content -->
<section class="content pt-3">

    <!-- Default box -->
    <div class="card ">
        <div class="card-header">
            <h3 class="card-title font-weight-bold">Başlık İşlemleri</h3>

            <div class="card-tools">
                <a href="/Heading/AddHeading"><i class="fas fa-pen-alt"></i></a>
                @*@Html.ActionLink("+", "AddHeading", null, new { @class = "btn btn-success btn-sm" })*@
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>

        </div>
        <div class="card-body p-0">
            <table class="table table-striped projects">
                <thead>
                    <tr>

                        @*<th style="width: 1%">
                                #
                            </th>*@
                        <th style="width: 30%">
                            Başlık Adı
                        </th>
                        <th style="width: 25%">
                            Başlık Yazarı
                        </th>
                        <th>
                            Başlık Kategorisi
                        </th>
                        <th style="width: 8%" class="text-center">
                            Durum
                        </th>
                        <th style="width: 20%" class="text-center">
                            İşlemler
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        switch (item.isActive)
                        {
                            case true:
                                isActiveValue = "badge badge-success";
                                isActiveText = "Aktif";
                                break;
                            case false:
                                isActiveValue = "badge badge-danger";
                                isActiveText = "Pasif";
                                break;
                        }


                        <tr>
                            @*<td>
                                                            #
                                </td>*@
                            <td>

                                @item.HeadingName

                                <br />
                                <small>
                                    Created @item.HeadingDate.ToShortDateString()
                                </small>
                            </td>
                            <td>
                                <ul class="list-inline">
                                    <li class="list-inline-item">
                                        @*@item.Writer.WriterName @item.Writer.WriterSurname*@
                                        <a href="/Writer/UpdateWriter/@item.WriterID"><img alt="Avatar" class="table-avatar" src="~/themes/AdminLTE/dist/img/avatar.png"></a>
                                    </li>
                                </ul>
                            </td>
                            <td>
                                @item.Category.CategoryName
                            </td>
                            <td class="project-state">
                                <span class="@isActiveValue">@isActiveText</span>
                            </td>
                            <td class="project-actions text-right">
                                <a class="btn btn-primary btn-sm" href="/Content/ContentByHeading/@item.HeadingID">
                                    <i class="fas fa-folder">
                                    </i>
                                </a>
                                <a class="btn btn-warning btn-sm" href="/Heading/UpdateHeading/@item.HeadingID">
                                    <i class="fas fa-pencil-alt">
                                    </i>
                                </a>
                                <a class="btn btn-danger btn-sm" href="/Heading/DeleteHeading/@item.HeadingID">
                                    <i class="fas fa-trash">
                                    </i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
