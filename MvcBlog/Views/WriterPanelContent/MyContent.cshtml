@using Entity.Concrate
@model List<Content>
@{
    ViewBag.Title = "MyContent";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="container pt-3">
    <!-- Timelime example  -->
    <div class="row">
        <div class="col-md-12">
            @*<div class=" col-md-3 card card-header bg-danger text-center font-weight">
                @ViewBag.HeadName
            </div>*@

            <div class="timeline">
                @foreach (var item in Model)
                {
                    <!-- timeline time label -->
                    <div class="time-label">
                        <span class="bg-success">@item.ContentDate.ToShortDateString()</span>
                    </div>
                    <!-- /.timeline-label -->
                    <!-- timeline item -->
                    <div>
                        <i class="fas fa-newspaper bg-info"></i>

                        <div class="timeline-item">

                            <h3 class="timeline-header border-0">
                                <a href="~/Content/ContentByHeading/@item.HeadingID">@item.Heading.HeadingName</a>
                            </h3>
                        </div>
                    </div>
                    <!-- END timeline item -->
                    <!-- timeline item -->
                    <div>
                        <i class="fas fa-comments bg-warning"></i>

                        <div class="timeline-item">

                            <div class="timeline-body">
                                @item.ContentText
                            </div>

                        </div>
                    </div>
                }
                <!-- END timeline item -->
            </div>

            <!-- The time line -->

        </div>
        <!-- /.col -->
    </div>

</div>

