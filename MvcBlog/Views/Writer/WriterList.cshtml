@using Entity.Concrate
@model List<Writer>
@{
    ViewBag.Title = "WriterList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="hold-transition sidebar-mini">

    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-12">
                    <h1 class=" bg-dark text-center">Yazarlar</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card card-solid">
            <div class="card-body pb-0">
                <div class="row d-flex align-items-stretch">
                    @foreach (var item in Model)
                    {
                        <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch">
                            <div class="card bg-light">
                                <div class="card-header text-muted border-bottom-0">

                                    <img style="width:150px; height:150px;" src="~/themes/AdminLTE/dist/img/gold.png" />
                                    <b style="font-size:1.5rem;"> Altın Üye</b>
                                </div>
                                <div class="card-body pt-0">
                                    <div class="row">
                                        <div class="col-8">
                                            <h2 class="lead"><b>@item.WriterName @item.WriterSurname</b></h2>
                                            <p class="@*text-muted*@ text-sm" style="color:#14245f" ;><b>Mail: </b>@item.WriterMail </p>
                                            <ul class="ml-4 mb-0 fa-ul " style="color:#14245f" ;>
                                                @*text-muted*@
                                                <li @*class="small"*@><span class="fa-li"><i class="fas fa-address-card fa-lg"></i></span> Açılan Başlık Sayısı : <a href="#">20</a></li>
                                                <li @*class="small"*@><span class="fa-li"><i class="fas fa-comments fa-l14245fg"></i></span> Toplam Yorum Sayısı : 74 </li>
                                            </ul>
                                        </div>
                                        <div class="col-4 text-center">
                                            <img src="~/themes/AdminLTE/dist/img/user1-128x128.jpg" alt="" class="img-circle img-fluid">
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <div class="text-right">
                                        <a href="#" class="btn btn-sm bg-teal">
                                            <i class="fas fa-comments"></i>
                                        </a>
                                        <a href="/Writer/UpdateWriter/@item.WriterID" class="btn btn-sm btn-primary">
                                            <i class="fas fa-user"></i> Profili Görüntüle
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
            <!-- /.card-body -->
            <!-- /.card-footer -->
        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->

</div>