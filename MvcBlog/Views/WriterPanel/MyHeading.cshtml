@using Entity.Concrate
@model List<Heading>
@{
    ViewBag.Title = "MyHeading";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}


<!-- Main content -->
<section class="content pt-3">

    <!-- Default box -->
    <div class="card ">
        <div class="card-header">
            <h3 class="card-title font-weight-bold">Başlık İşlemleri</h3>

            <div class="card-tools">
                <a href="/WriterPanel/NewHeading"><i class="fas fa-pen-alt"></i></a>
                @*@Html.ActionLink("+", "AddHeading", null, new { @class = "btn btn-success btn-sm" })*@
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>

        </div>
        <div class="card-body p-0">
            <table class="table table-striped projects">
                <thead>
                    <tr>

                        @*<th style="width: 1%">
                                #
                            </th>*@
                        <th style="width: 33%">
                            Başlık Adı
                        </th>

                        <th style="width: 33%">
                            Başlık Kategorisi
                        </th>

                        <th style="width: 33%" class="text-center">
                            İşlemler
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                        <tr>

                            <td>

                                @item.HeadingName

                                <br />
                                <small>
                                    Oluşturma Tarihi: @item.HeadingDate.ToShortDateString()
                                </small>
                            </td>

                            <td>
                                @item.Category.CategoryName
                            </td>

                            <td class="project-actions text-right">
                                <a class="btn btn-primary btn-sm" href="/Content/ContentByHeading/@item.HeadingID">
                                    <i class="fas fa-folder">
                                        Yazılar
                                    </i>
                                </a>
                                <a class="btn btn-warning btn-sm" href="/WriterPanel/UpdateHeading/@item.HeadingID">
                                    <i class="fas fa-pencil-alt">
                                        Düzenle
                                    </i>
                                </a>
                                <a class="btn btn-danger btn-sm" href="/WriterPanel/DeleteHeading/@item.HeadingID">
                                    <i class="fas fa-trash">
                                        Sil
                                    </i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
